<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="ua.nure.andrii.yahniukov">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Electromobile"
        tools:targetApi="31">
        <activity
            android:name=".activities.navigation.DrawerBaseActivity"
            android:exported="false"
            android:configChanges="locale|orientation" />
        <activity
            android:name=".activities.screens.UserActivity"
            android:exported="false"
            android:configChanges="locale|orientation" />
        <activity
            android:name=".activities.screens.AddCarActivity"
            android:exported="false"
            android:configChanges="locale|orientation" />
        <activity
            android:name=".activities.screens.ServiceActivity"
            android:exported="false"
            android:configChanges="locale|orientation" />
        <activity
            android:name=".activities.screens.ChargerActivity"
            android:exported="false"
            android:configChanges="locale|orientation" />
        <activity
            android:name=".activities.authentication.LoginActivity"
            android:exported="false"
            android:configChanges="locale|orientation" />
        <activity
            android:name=".activities.authentication.RegistrationActivity"
            android:exported="true"
            android:configChanges="locale|orientation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
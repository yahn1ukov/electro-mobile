<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/list_service_item_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/list_id"
        android:textSize="18sp"
        android:textColor="@color/purple"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/list_service_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/purple"
        android:text="@string/list_services_name"
        app:layout_constraintStart_toEndOf="@+id/list_service_item_id"
        app:layout_constraintTop_toTopOf="@+id/list_service_item_id" />

    <TextView
        android:id="@+id/list_service_item_country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="15sp"
        android:text="@string/list_country"
        app:layout_constraintStart_toStartOf="@+id/list_service_item_id"
        app:layout_constraintTop_toBottomOf="@+id/list_service_item_id" />

    <TextView
        android:id="@+id/list_service_item_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:textSize="15sp"
        android:text="@string/list_city"
        app:layout_constraintStart_toEndOf="@+id/list_service_item_country"
        app:layout_constraintTop_toTopOf="@+id/list_service_item_country" />

    <TextView
        android:id="@+id/list_service_item_street"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="@string/list_street"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/list_service_item_city"
        app:layout_constraintTop_toTopOf="@+id/list_service_item_city" />

    <TextView
        android:id="@+id/list_service_item_zip_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:textSize="15sp"
        android:text="@string/list_zip_code"
        app:layout_constraintStart_toEndOf="@+id/list_service_item_street"
        app:layout_constraintTop_toTopOf="@+id/list_service_item_street" />

</androidx.constraintlayout.widget.ConstraintLayout>